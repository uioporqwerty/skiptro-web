{
    "name": "skiptro-web",
    "version": "1.0.0",
    "description": "Easily skip tv show intros",
    "main": "content_script.js",
    "author": "Nitish Sachar",
    "homepage": "https://github.com/uioporqwerty/skiptro-web#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/uioporqwerty/skiptro-web.git"
    },
    "bugs": {
        "url": "https://github.com/uioporqwerty/skiptro-web/issues"
    },
    "scripts": {
        "build:firefox": "webextension-toolbox build firefox --config ./webext.config.js",
        "build:edge": "webextension-toolbox build edge --config ./webext.config.js",
        "build:chrome": "webextension-toolbox build chrome --config ./webext.config.js",
        "build:opera": "webextension-toolbox build opera --config ./webext.config.js",
        "check:formatting": "prettier --check app",
        "check:formatting:write": "prettier --write app",
        "check:linting": "npx eslint app",
        "generateLicenses": "license-report --only=dev,prod --output=html --config license-report-config.json > licenses.html",
        "precommit": "npm run check:formatting && npm run check:linting",
        "start:firefox": "webextension-toolbox dev firefox --config ./webext.config.js & npm run generateLicenses",
        "start:edge": "webextension-toolbox dev edge --config ./webext.config.js & npm run generateLicenses",
        "start:chrome": "webextension-toolbox dev chrome --config ./webext.config.js & npm run generateLicenses",
        "start:opera": "webextension-toolbox dev opera --config ./webext.config.js & npm run generateLicenses",
        "test:unit": "jest --coverage"
    },
    "dependencies": {
        "@growthbook/growthbook": "^0.33.0",
        "compare-versions": "^6.0.0-rc.1",
        "mixpanel-browser": "^2.49.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typed-inject": "^3.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/mixpanel-browser": "^2.38.1",
        "@types/react": "^18.0.31",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.57.0",
        "chrome-webstore-upload-cli": "^2.2.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "eslint": "^8.36.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.2",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "license-report": "^6.4.0",
        "prettier": "^2.8.4",
        "sass": "^1.60.0",
        "sass-loader": "^13.2.2",
        "style-loader": "^3.3.2",
        "ts-jest": "^29.0.5",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "web-ext-types": "^3.2.1",
        "webextension-polyfill": "^0.10.0",
        "webextension-toolbox": "^4.0.3"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run precommit"
        }
    }
}
